<br /><br />
      <form action="/" method="post">
          <div>
            <input type="text" id="task-name" name="TaskName" placeholder="New Task" onclick="return ShowOption()" />
              <select>
                  <option>Please Choose</option>
                  <option value="habit">Habit</option>
                  <option value="daily">Daily</option>
                  <option value="todo">To-Do</option>
                  <option value="reward">Reward</option>
              </select>
          </div>
          <div><input type="hidden" name="Travel" /></div>
           <div class="task-name"></div>
          <div>
              <textarea name="TaskNotes" placeholder="Task Notes"></textarea>
          </div>
          <div class="container">
              <div class="row">
                  <div class='col-sm-3'>
                      <div class="form-group">
                          <div class='input-group datetimepicker1' id='datetimepicker1'>
                              <input type='text' class="form-control" name="TaskDueDate" />
                              <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-calendar"></span>
                              </span>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div>
              <select>
                  <option>Choose Task Difficulty</option>
                  <option value="0.1">Trivial</option>
                  <option value="1">Easy</option>
                  <option value="1.5">Medium</option>
                  <option value="2">Hard</option>
              </select>
          </div>
          <div class="container">
              <div class="row">
                  <div class='col-sm-3'>
                      <div class="form-group">
                          <div class='input-group datetimepicker1' id='datetimepicker1'>
                              <input type='text' class="form-control" name="ReminderStartDate" />
                              <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-calendar"></span>
                              </span>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="container">
              <div class="row">
                  <div class='col-sm-3'>
                      <div class="form-group">
                          <div class='input-group date' id='datetimepicker3'>
                              <input type='text' class="form-control" name="ReminderTime" />
                              <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-time"></span>
                              </span>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div>
              <select>
                  <option>Choose Task Frequency</option>
                  <option value="weekly">Weekly</option>
                  <option value="daily">Daily</option>
              </select>
          </div>
          <div>
              <label>Sunday</label> <input type="checkbox" name="su" value="false" />
              <label>Monday</label> <input type="checkbox" name="m" value="false" />
              <label>Tuesday</label> <input type="checkbox" name="t" value="false" />
              <label>Wednesday</label> <input type="checkbox" name="w" value="false" />
              <label>Thursday</label> <input type="checkbox" name="th" value="false" />
              <label>Friday</label> <input type="checkbox" name="f" value="false" />
              <label>Saturday</label> <input type="checkbox" name="s" value="false" />
          </div>
          <div><input type="number" name="" disabled placeholder="Task Streaks" /></div>

          <div class="container">
              <div class="row">
                  <div class='col-sm-3'>
                      <div class="form-group">
                          <div class='input-group datetimepicker1' id='datetimepicker1'>
                              <input type='text' class="form-control" name="TaskStartDate" />
                              <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-calendar"></span>
                              </span>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div>
              <select>
                  <option>Habit Picker</option>
                  <option value="true">Good Habit</option>
                  <option value="true">Bad Habit</option>
              </select>
          </div>
          <div><input type="number" name="TaskRewardValue" placeholder="Task Reward Value" disabled /></div>
          <div><input type="number" name="EveryXDays" placeholder="Every X Days" disabled /></div>
          <input type="submit" name="Submit" />
      </form>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('.datetimepicker1').datetimepicker();
        });
    </script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker3').datetimepicker({
                format: 'LT'
            });
        });
    </script>
    <script type="text/javascript">
        $(function ShowOptions() {

            $('.task-name').hide();
            if $(('#task-name').value == 'habit')
            {
                $(  '<div>',
                        '<select>',
                            '<option>Habit Picker</option>',
                            '<option value="true">Good Habit</option>',
                            '<option value="true">Bad Habit</option>',
                        '</select>',
                    '</div>'
                ).appendTo('.task-name').show();
            }
        });
    </script>
}