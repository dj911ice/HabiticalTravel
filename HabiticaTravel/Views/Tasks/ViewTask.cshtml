
@{
    ViewBag.Title = "ViewTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@ViewBag.task.TaskName</h2>
    <ul>
        <li>@ViewBag.task.TaskType</li>
        <li>@ViewBag.task.TaskTag</li>
        <li><p>@ViewBag.task.TaskNotes</p></li>
        <li>@ViewBag.task.TaskDueDate</li>
        <li>@ViewBag.task.ReminderStartDate</li>
        <li>@ViewBag.task.ReminderTime</li>
    </ul>
</div>

<div class="container-fluid">
    <div class="row">
        @foreach (var y in ViewBag.yelp)
        {
        <div class="col-xs-3">
            <h2>@y["title"]</h2>
            <div class="yelp">
                <h3>@y["name"]</h3>
                <img src="@y["image_url"]" height="100" width="100"/>
                <h5>@y["rating"]</h5>
            </div>
        </div>
        }
    </div>
</div>

