
@model HabiticaTravel.Models.TravelGroupandUser
@{
    ViewBag.Title = "User Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<table class="table">

    <tr>
        <th>@ViewBag.Title</th>
    </tr>
</table>


@using (Html.BeginForm("SearchUserByEmail", "Group", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Look up user by email...</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(tg => tg.TravelGroup.Destination, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(tg => tg.TravelGroup.GroupLeader, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(tg => tg.TravelGroup.TravelMethod, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(tg => tg.TravelGroup.TravelGroupId, new { htmlAttributes = new { @class = "form-control" } })


    <div class="form-group">
        @Html.LabelFor(tg => tg.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(tg => tg.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Search..." />
        </div>
    </div>
}

@if (ViewBag.ShowEmail != null)
{


    using (Html.BeginForm("AddNewUserToGroup", "Group", FormMethod.Post, new { htmlAttributes = new { @class = "form-horizontal", role = "form" } }))
    {
        @Html.AntiForgeryToken()
        <h4>This is your user? if so, add to group...</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(tg => tg.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(tg => tg.TravelGroup.Destination, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(tg => tg.TravelGroup.GroupLeader, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(tg => tg.TravelGroup.TravelMethod, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(tg => tg.TravelGroup.TravelGroupId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(tg => tg.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(tg => tg.TravelGroupUser.UserId, new { htmlAttributes = new { @class = "form-control" } })


        <div class="form-group">
            <label>@Model.Email</label>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add User" />
            </div>
        </div>
    }

}
else
{
    <h1>@ViewBag.UserNullMessage</h1>
}


