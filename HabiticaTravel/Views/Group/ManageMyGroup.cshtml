@model HabiticaTravel.Models.TravelGroup
@{
    ViewBag.Title = "ManageMyGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage My Group</h2>

<head>
    <title>LeadearBoards</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Group Name</th>
                    <th>Name</th>
                    <th>Create Group</th>
                    <th>Edit Group</th>
                    <th>Delete Group</th>
                </tr>
            </thead>

        </table>
    </div>
</body>

@foreach (var p in ViewBag.GroupUsers)
{
<tr>

    <td>@p.UserId</td>
    <td>@p.Score</td>


    @if (ViewBag.CurrentUser == Model.GroupLeader)
    {
        <td><a href="/Group/AddNewUserToGroup?NewUser=@p.NewUser">Add Memeber</a></td>

        <td><a href="/Group/GetGroupToUpdate?TravelGroupId=@p.TravelGroupId">Edit Group</a></td>

        <td><a href="/Group/DeleteGroupUser?TravelGroupId=@p.TravelGroupId" onclick="return ConfirmDelete()">Delete</a></td>
    }

</tr>

}

<button class=" btn"><a href="/Group/AddNewTravelGroup"></a> Create Group </button> 

<script>
    function ConfirmDelete() {

        if (confirm("Are you sure you want to delete this item ?") === true) {

            return true;

        }
        else {
            return false;
        }
    }

</script>