@model List<HabiticaTravel.Models.TravelGroupandUser>

@{
    ViewBag.Title = "ManageMyGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage My Group</h2>

<head>
    <title>LeadearBoards</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Group Name</th>
                    <th>Name</th>

                </tr>
            </thead>
            @foreach (var p in Model)
            {
                <tr>

                    <td>@p.TravelGroup.TravelGroupName</td>
                    <td>@p.UserName</td>

                    @* This if statement is here to Validate that the current user is the group leader  *@
                    @if (ViewBag.CurrentUser == p.TravelGroup.GroupLeader)
                    {
                        <td><a href="/Group/DisplayGroupInfo?TravelGroupId=@p.TravelGroup.TravelGroupId">Group Details</a></td>

                        <td><a href="/Group/DisplayGroupScoreBoard?TravelGroupId=@p.TravelGroup.TravelGroupId">LeaderBoards</a></td>

                        <td><a href="/Group/UserSearchByEmailForm?TravelGroupId=@p.TravelGroup.TravelGroupId">Add Memeber</a></td>

                        <td><a href="/Group/UpdateGroup?TravelGroupId=@p.TravelGroup.TravelGroupId">Edit Group</a></td>

                        <td><a href="/Group/DeleteGroup?TravelGroupId=@p.TravelGroup.TravelGroupId" onclick="return ConfirmDelete()">Delete</a></td>

                        <td><a href="/Tasks/CreateNewGroupCustomTask?model2=@Model">Add a Group Task</a></td>

                        <td><a href="/Tasks/ShowGroupTasks?model2=@Model">Edit a Group Task</a></td>

                    }

                        <td><a href="/Group/DisplaySelectedGroup?TravelGroupId=@p.TravelGroup.TravelGroupId">View Group</a></td>

                </tr>
            }
        </table>
    </div>
</body>


<a href="/Group/AddNewTravelGroup">Create Group </a>

<script>
    function ConfirmDelete() {

        if (confirm("Are you sure you want to delete this item ?") === true) {

            return true;

        }
        else {
            return false;
        }
    }

</script>