@model HabiticaTravel.Models.TravelGroupVM

@{
    SelectList TravelType = new SelectList(
 new List<SelectListItem>
 {
new SelectListItem { Value = "...", Text = "...please select a Transportaion Type"},
new SelectListItem { Value = "Airplane", Text = "Airplane"},
new SelectListItem { Value = "Bus", Text = "Bus"},
new SelectListItem { Value = "Train", Text = "Train"},
new SelectListItem { Value = "Car/Rental car", Text = "Car/Rental Car"},
new SelectListItem { Value = "Other", Text = "Other"},
 }, "Value", "Text");

} 

<h1 style="margin-top: 50px">Create Traveling Group</h1>

@using (Html.BeginForm("SaveNewGroup", "Group", FormMethod.Post, new { htmlAttributes = new { @class = "form-horizontal", role = "form" } }))
{
    @Html.AntiForgeryToken()
    <h4 style="margin-top:50px; color: white">Add a travelling group!</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(tg => tg.TravelGroupId, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-group">
        @Html.LabelFor(tg => tg.TravelGroupName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(tg => tg.TravelGroupName, new { htmlAttributes = new { @class = "form-control", value = Model.TravelGroupName } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(tg => tg.Destination, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(tg => tg.Destination, new { htmlAttributes = new { @class = "form-control", value = Model.Destination } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(tg => tg.TravelMethod, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(tg => tg.TravelMethod, TravelType, new { htmlAttributes = new { @class = "form-control", styles = "color:white;"} })
        </div>
    </div>
   

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create Group" />
        </div>
    </div>
}

