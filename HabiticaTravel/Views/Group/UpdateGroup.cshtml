@model HabiticaTravel.Models.TravelGroup

@{
    ViewBag.Title = "UpdateGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateGroup</h2>


<h1>Create Traveling Group</h1>

@using (Html.BeginForm("SaveUpdatedGroupChanges", "Group", FormMethod.Post, new { htmlAttributes = new { @class = "form-horizontal", role = "form" } }))
{
    @Html.AntiForgeryToken()
    <h4>Fill out this form.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(tg => tg.TravelGroupId, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(tg => tg.GroupLeader, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-group">
        @Html.LabelFor(tg => tg.TravelGroupName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(tg => tg.TravelGroupName, new { htmlAttributes = new { @class = "form-control", value = Model.TravelGroupName } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(tg => tg.Destination, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(tg => tg.Destination, new { htmlAttributes = new { @class = "form-control", value = Model.Destination } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(tg => tg.TravelMethod, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(tg => tg.TravelMethod, new { htmlAttributes = new { @class = "form-control", value = Model.TravelMethod } })
            Other: @Html.RadioButtonFor(tg => tg.TravelMethod, true, new { @class = "form-control", }) <!--Make into a drop down , creat list of transportaion to create select list-->
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create Group" />
        </div>
    </div>
}

